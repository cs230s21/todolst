<TaskButton@Button>
    size_hint: 1, None
    background_down: ''
    background_normal: ''
    background_color: [0, 0, 1, 0]
    markup: True
    halign: 'left'
    valign: 'center'
    color: [0, 0, 0, 1]


<DateButton@Button>
    size_hint: 1, None
    height: dp(40)
    background_down: ''
    background_normal: ''
    background_color: [0, 1, 0, 0]
    markup: True
    halign: 'left'
    valign: 'center'
    color: [0, 0, 0, 1]


<DateDividerLabel, TaskDividerLabel@Label>
    size_hint: 1, None
    height: dp(1)


<TaskView@BoxLayout>
    size_hint: 1, None
    orientation: 'horizontal'


<UpcomingRoute>:
    BoxLayout:
        id: screen
        size: root.size
        orientation: 'vertical'

        Label:
            text: 'status bar'
            size_hint: 1, None
            height: dp(24)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_variant_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

        Label:
            text: 'action bar'
            color: app.theme_palette['action_bar_text_color']
            size_hint: 1, None
            height: dp(56)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

        FloatLayout:
            ScrollView:
                do_scroll: False, True
                canvas.before:
                    Color:
                        rgba: app.theme_palette['background_color']
#                        rgba: [1,0,0,0.5]
                    Rectangle:
                        size: self.size
                        pos: self.pos

                GridLayout: # must specify height to scrollable
                    id: upcoming_tasks_list_view
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height  # minimum_height is min height to contain all children
#                    spacing: [0, dp(4)]
                    padding: [dp(12), dp(12), dp(12), dp(12)]

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                padding: [0, 0, dp(16), dp(16)]

                Button:
                    size_hint: None, None
                    size: dp(50), dp(50)
                    background_normal: ''
                    background_color: [0, 0, 0, 0]
                    text: '+'
                    font_size: 40

                    canvas.before:
                        Color:
                            rgba: app.theme_palette['secondary_color']
                        Ellipse:
                            size: self.size
                            pos: self.pos

