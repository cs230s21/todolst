<UpcomingRoute>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'

        Label:
            text: 'status bar'
            size_hint: 1, None
            height: dp(24)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_variant_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

        Label:
            text: 'action bar'
            size_hint: 1, None
            height: dp(56)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

        FloatLayout:
            ScrollView:
                do_scroll: False, True
                canvas.before:
                    Color:
                        rgba: app.theme_palette['background_color']
                    Rectangle:
                        size: self.size
                        pos: self.pos

                GridLayout: # must specify height to scrollable
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height  # minimum_height is min height to contain all children
                    spacing: [0, dp(16)]
                    padding: [dp(16), dp(16), dp(16), dp(16)]

                    Label:
                        text_size: self.width, None
                        size_hint: 1, None
                        height: self.texture_size[1]  # width = texture_size[0]
                        text: "Video provides a powerful way to help you prove your point. When you click Online Video, you can paste in the embed code for the video you want to add. You can also type a keyword to search online for the video that best fits your document. To make your document look professionally produced, Word provides header, footer, cover page, and text box designs that complement each other. For example, you can add a matching cover page, header, and sidebar. Click Insert and then choose the elements you want from the different galleries. Themes and styles also help keep your document coordinated. When you click Design and choose a new Theme, the pictures, charts, and SmartArt graphics change to match your new theme. When you apply styles, your headings change to match the new theme. Save time in Word with new buttons that show up where you need them."
                        color: app.theme_palette['text_color']

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                padding: [0, 0, dp(16), dp(16)]

                Button:
                    size_hint: None, None
                    size: dp(50), dp(50)
                    background_normal: ''
                    background_color: [0, 0, 0, 0]
                    text: '+'
                    font_size: 40

                    canvas.before:
                        Color:
                            rgba: app.theme_palette['secondary_color']
                        Ellipse:
                            size: self.size
                            pos: self.pos

