<UpcomingRoute>:
    name: 'upcoming_route'

    BoxLayout:
        id: screen
        size: root.size
        orientation: 'vertical'

        Label:
            text: 'status bar'
            size_hint: 1, None
            height: dp(24)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_variant_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

        BoxLayout:  # action bar
            orientation: 'horizontal'
            size_hint: 1, None
            height: dp(56)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

            RouteTitleLabel:
                text: ' ' * 3 + 'Upcoming'

            IconButton:
                text: "%s" % icon('calendar-check')
                color: app.theme_palette['text_primary_color']

            IconButton:
                text: "%s" % icon('cog')
                color: app.theme_palette['text_primary_color']


        FloatLayout:  # layout for tasks view and add button
            ScrollView:
                do_scroll: False, True
                canvas.before:
                    Color:
                        rgba: app.theme_palette['background_color']
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout: # must specify height to scrollable
                    id: upcoming_scrollview
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height  # minimum_height is min height to contain all children
                    padding: [dp(12), dp(12), dp(12), dp(12)]

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                padding: [0, 0, dp(16), dp(16)]

                IconButton:
                    size_hint: None, None
                    size: dp(50), dp(50)
                    background_normal: ''
                    background_color: [0, 0, 0, 0]
                    text: "%s" % icon('plus')
                    color: app.theme_palette['text_secondary_color']

                    canvas.before:
                        Color:
                            rgba: app.theme_palette['secondary_color']
                        Ellipse:
                            size: self.size
                            pos: self.pos

