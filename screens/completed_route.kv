<CompletedRoute>:
    name: "completed_route"

    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            text: 'status bar'
            size_hint: 1, None
            height: dp(24)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_variant_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

        BoxLayout:  # action bar
            orientation: 'horizontal'
            size_hint: 1, None
            height: dp(56)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

            IconButton:
                text: "%s" % icon('chevron-left')
                color: app.theme_palette['text_primary_color']
                on_release:
                    app.root.current = "upcoming_route"
                    root.manager.transition.direction = 'right'

            RouteTitleLabel:
                text: ' Completed tasks'

            IconButton:
                text: "%s" % icon('cog')
                color: app.theme_palette['text_primary_color']

        ScrollView:
            do_scroll: False, True
            canvas.before:
                Color:
                    rgba: app.theme_palette['background_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                id: completed_tasks
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [dp(12), dp(12), dp(12), dp(12)]
