<AddTaskRoute>:
    name: "add_task_route"

    GridLayout:
        cols:1

        TextInput:
            id: subject
            multiline: True
            hint_text: 'Add task description'

        TextInput:
            id: time
            multiline: True
            hint_text: 'Add task due date'

        Label:
            text: "Is this task of high priority? Switch to 'ON' if so."

        Switch:
            id: priority
            active: False

        GridLayout:
            cols: 2

            Button:
                text: "Register Task"
                on_press: root.add_task_to_upcoming()

            Button:
                text: "Go Back"
                on_release:
                    root.add_task_to_upcoming()
                    app.root.current = "upcoming_route"
                    root.manager.transition.direction = "down"