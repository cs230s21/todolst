<AddTaskRoute>:
    name: "add_task_route"


    GridLayout:
        cols:1

        TextInput:
            id: body
            multiline: True
            hint_text: 'Enter the task that you want to complete here.'

        TextInput:
            id: time
            multiline: True
            hint_text: 'Enter the time that you want to complete the task by here.'

        Label:
            text: "Is this task of high priority? Switch to 'ON' if so."

        Switch:
            id: priority
            active: False

        GridLayout:
            cols: 2

            Button:
                text: "Register Task"
