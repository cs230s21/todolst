WindowManager:
    WindowOne:
    WindowTwo:
    WindowThree:
    WindowFour:

<WindowOne>:
    name: "window_one"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Button:
                text: "Go to Screen 4"
                size_hint: (.5, .25)
                on_release:
                    app.root.current = "window_four"
                    root.manager.transition.direction = "left"

            Button:
                text: "Go to Screen 3"
                size_hint: (.5, .25)
                on_release:
                    app.root.current = "window_three"
                    root.manager.transition.direction = "left"

        ScrollView:
            size_hint_y: 10
            Label:
                id: view_of_remaining_tasks
                size_hint_y: None
                text: "Welcome to todolst!"
                text_size: self.width, None
                height: self.texture_size[1]

        Button:
            text: "Click to Add Tasks"
            size_hint: (.5, 1)
            on_release:
                app.root.current = "window_two"
                root.manager.transition.direction = "left"


<WindowTwo>:
    name: "window_two"

    GridLayout:
        cols:1

        TextInput:
            id: body
            multiline: True
            hint_text: 'Enter the task that you want to complete here.'

        TextInput:
            id: time
            multiline: True
            hint_text: 'Enter the time that you want to complete the task by here.'

        Label:
            text: "Is this task of high priority? Switch to 'ON' if so."

        Switch:
            id: priority
            active: False

        GridLayout:
            cols: 2

            Button:
                text: "Register Task"
                on_release:
                    root.add_task()

            Button:
                text: "Go Back"
                on_release:
                    app.root.current = "window_one"
                    root.manager.transition.direction = "right"
                    root.update_tasks()

<WindowThree>:
    name: "window_three"

    GridLayout:
        cols:1

        Label:
            text: "Settings screen will go here."

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "window_one"
                root.manager.transition.direction = "right"

<WindowFour>:
    name: "window_four"

    GridLayout:
        cols:1

        Label:
            text: "Completed tasks screen will go here."

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "window_one"
                root.manager.transition.direction = "right"