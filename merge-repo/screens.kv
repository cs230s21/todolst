<WindowManager>:
    WindowOne:
    WindowTwo:
    WindowThree:
    WindowFour:

<WindowOne>:
    name: "window_one"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Button:
                text: "Go to Screen 4"
                size_hint: (.5, .25)
                on_release:
                    app.root.current = "window_four"
                    root.manager.transition.direction = "left"

            Button:
                text: "Go to Screen 3"
                size_hint: (.5, .25)
                on_release:
                    app.root.current = "window_three"
                    root.manager.transition.direction = "left"

        ScrollView:
            size_hint_y: 10
            Label:
                id: view_of_remaining_tasks
                size_hint_y: None
                text: "Welcome to todolst!"
                text_size: self.width, None
                height: self.texture_size[1]

        Button:
            text: "Click to Add Tasks"
            size_hint: (.5, 1)
            on_release:
                app.root.current = "window_two"
                root.manager.transition.direction = "left"


<WindowTwo>:


<WindowThree>:
    name: "window_three"

    GridLayout:
        cols:1

        Label:
            text: "Settings screen will go here."

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "window_one"
                root.manager.transition.direction = "right"

<WindowFour>:
    name: "window_four"

    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint_y: 100
            GridLayout:
                size_hint_y: None
                width: 100
                cols: 1
                id: completed_tasks
                row_default_height: 100
                row_force_default: True
                height: self.minimum_height

        Button:
            size_hint_y: 5
            text: "Go Back"
            on_release:
                app.root.current = "window_one"
                root.manager.transition.direction = "right"

<Row>:
    height: 10
    Button:
        id: remove_button
        size_hint_x: 10
        text: "Remove"

    Label:
        id: task_label
        size_hint_x: 100
        text: ""