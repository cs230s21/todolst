#: import icon kivysome.icon


<RouteTitleLabel@Label>
    size_hint: 7, 1
    text_size: self.size
    halign: 'left'
    valign: 'center'
    font_size: sp(20)
    color: app.theme_palette['text_primary_color']


<DateDividerLabel>
    size_hint: 1, None
    height: dp(1.5)
    color: app.theme_palette['divider_color']


<DateButton, TaskButton, IconButton>
    size_hint: 1, None
    background_down: ''
    background_normal: ''
    background_color: [1, 1, 0, 0]
    markup: True
    text_size: self.size
    halign: 'left'
    valign: 'center'
    color: app.theme_palette['text_background_color']


<IconButton@Button>
    size_hint: 1, 1
    halign: 'center'
    valign: 'center'
    font_size: sp(20)


<DateButton>
    height: dp(40)


<TaskButton>
    font_size: sp(16)
    ontime_icon: "%s" % icon('hourglass-half')
    overdue_icon: "%s" % icon('hourglass-end')
    good_color: app.theme_palette['good_color']
    bad_color: app.theme_palette['bad_color']


<TaskCheckBox>
    size_hint: 1, 1
    color: app.theme_palette['divider_color']


<TaskView>
    size_hint: 1, None
    orientation: 'horizontal'

<ErrorPopup>
    background_color: (0, 0, 0, 0)
    size_hint: (0.8, 0.25)
    text_color: app.theme_palette['text_primary_color']
    BoxLayout:
        canvas:
            Color:
                rgba: app.theme_palette['primary_color']
            RoundedRectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        Button:
            id: message_label
            background_normal: ''
            background_down: ''
            valign: 'center'
            halign: 'center'
            background_color: app.theme_palette['primary_variant_color']
            color: app.theme_palette['text_primary_variant_color']
            text_size: self.size
            size_hint_y: 2
            text: ''
        Button:
            background_normal: ''
            background_down: ''
            background_color: app.theme_palette['secondary_color']
            color: app.theme_palette['text_secondary_color']
            valign: 'center'
            size_hint_y: 1
            text: 'OK'
            on_release:
                root.dismiss()