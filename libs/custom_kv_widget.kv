#: import icon kivysome.icon


<RouteTitleLabel@Label>
    size_hint: 7, 1
    text_size: self.size
    halign: 'left'
    valign: 'center'
    font_size: sp(20)
    color: app.theme_palette['text_primary_color']


<DateDividerLabel>
    size_hint: 1, None
    height: dp(1.5)
    color: app.theme_palette['divider_color']


<DateButton, TaskButton, IconButton>
    size_hint: 1, None
    background_down: ''
    background_normal: ''
    background_color: [1, 1, 0, 0]
    markup: True
    text_size: self.size
    halign: 'left'
    valign: 'center'
    color: app.theme_palette['text_background_color']


<IconButton@Button>
    size_hint: 1, 1
    halign: 'center'
    valign: 'center'
    font_size: sp(20)


<DateButton>
    height: dp(40)


<TaskButton>
    font_size: sp(16)
    ontime_icon: "%s" % icon('hourglass-half')
    overdue_icon: "%s" % icon('hourglass-end')
    good_color: app.theme_palette['good_color']
    bad_color: app.theme_palette['bad_color']


<TaskCheckBox>
    size_hint: 1, 1
    color: app.theme_palette['divider_color']


<TaskView>
    size_hint: 1, None
    orientation: 'horizontal'


<ResizableTextInput@TextInput>:
    size_hint: 8, None
    size: self.height, self.minimum_height
    background_color: [1, 0, 0, 0]
    cursor_color: app.theme_palette['primary_color']
    padding: [dp(8), dp(8)]
    write_tab: False
    font_size: sp(16)
    multiline: True
    color: app.theme_palette['text_background_color']


<InputLayout@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: self.minimum_height

    canvas.before:
        Color:
            rgba: app.theme_palette['divider_color']
        RoundedRectangle:
            pos: self.pos
            size: self.size


<AddTaskTitle@Label>
    size_hint: 1, None
    text_size: self.width, None
    size: self.texture_size
    padding: [dp(8), 0]
    font_size: sp(30)
    valign: 'center'
    halign: 'left'
    color: app.theme_palette['text_background_color']


<RoundedConnerButton@IconButton>
    size_hint: 1, None
    height: dp(35)
    color: app.theme_palette['text_background_color']
    button_color: [0, 0, 0, 0]
    canvas.before:
        Color:
            rgba: self.button_color
        RoundedRectangle:
            pos: self.pos[0] + dp(5), self.pos[1]
            size: self.size[0] - dp(10), self.size[1]
<ErrorPopup>
    background_color: (0, 0, 0, 0)
    size_hint: (0.8, 0.25)
    text_color: app.theme_palette['text_primary_color']
    BoxLayout:
        canvas:
            Color:
                rgba: app.theme_palette['primary_color']
            RoundedRectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        Button:
            id: message_label
            background_normal: ''
            background_down: ''
            valign: 'center'
            halign: 'center'
            background_color: app.theme_palette['primary_variant_color']
            color: app.theme_palette['text_primary_variant_color']
            text_size: self.size
            size_hint_y: 2
            text: ''
        Button:
            background_normal: ''
            background_down: ''
            background_color: app.theme_palette['secondary_color']
            color: app.theme_palette['text_secondary_color']
            valign: 'center'
            size_hint_y: 1
            text: 'OK'
            on_release:
                root.dismiss()